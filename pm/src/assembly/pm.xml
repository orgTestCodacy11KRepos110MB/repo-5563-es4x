<assembly
  xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">

  <id>bin</id>

  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/assembly/bin/es4x.cmd</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>dos</lineEnding>
    </file>
    <file>
      <source>src/assembly/bin/es4x</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/assembly/bin/es4x-completion.bash</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>src/assembly/bin/es4x-cli.js</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/assembly/package.json</source>
      <outputDirectory/>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
      <fileMode>0644</fileMode>
    </file>
  </files>
</assembly>
